<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imWeather"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/w_01d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11"
        android:id="@+id/tvWeather"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imWeather"
        android:layout_toEndOf="@+id/imWeather"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:autoText="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvDesc"
        android:textSize="15sp"
        android:layout_below="@+id/tvWeather"
        android:layout_alignLeft="@+id/tvWeather"
        android:layout_alignStart="@+id/tvWeather" />

</RelativeLayout>